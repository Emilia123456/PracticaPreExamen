<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalle Alumno</title>
</head>
<body>
    @{
        foreach(Alumnos alumno in @ViewBag.LAlumnos){
            if(alumno.Legajo==@ViewBag.gajo){
                <p>Nombre: @alumno.Nombre</p>
                <p>Apellido: @alumno.Apellido </p>
                <p>Curso: @alumno.Curso </p>
                <p>Promedio: @alumno.Promedio </p>
                if(@alumno.Promedio<6){
                    <p>Desaprobado</p>
                }else{
                    <p>Aprobado</p>
                }
                <p>Especialidad: @alumno.Especialidad </p>
            }
        }
    }
</body>
</html>